<div id="signupModal" class="fixed inset-0 z-20 bg-gray-900 bg-opacity-50 flex justify-center items-center hidden">
    <div class="bg-white p-8 rounded-lg w-96 shadow-xl">
        <div id="signUpForm">
            <h2 class="text-2xl font-bold text-center mb-4 text-gray-700">Sign Up</h2>
            <div id="signupErrorMessage" class="text-red-600 text-sm mb-3 p-2 bg-red-50 border border-red-200 rounded hidden"></div>
            <form method="POST" action="/auth/register">
                <div class="mb-4">
                    <label for="signup-email" class="block text-sm font-medium text-gray-700 mb-1">Email (@sfsu.edu)</label>
                    <input type="email" id="signup-email" name="email" class="w-full p-2 border border-gray-300 rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-sfpurple focus:border-transparent" required pattern=".+@sfsu\.edu$" title="Please use your SFSU email address.">
                </div>
                <div class="mb-4">
                    <label for="signup-username" class="block text-sm font-medium text-gray-700 mb-1">Username (min 6 chars)</label>
                    <input type="text" id="signup-username" name="username" class="w-full p-2 border border-gray-300 rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-sfpurple focus:border-transparent" required minlength="6">
                </div>
                <div class="mb-4">
                    <label for="signup-password" class="block text-sm font-medium text-gray-700 mb-1">Password (min 6 chars)</label>
                    <input type="password" id="signup-password" name="password" class="w-full p-2 border border-gray-300 rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-sfpurple focus:border-transparent" required minlength="6">
                </div>
                <div class="mb-4">
                    <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" class="w-full p-2 border border-gray-300 rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-sfpurple focus:border-transparent" required>
                </div>

                <div class="mb-4 flex items-center">
                    <input type="checkbox" id="termsAccepted" name="termsAccepted" value="true" class="h-4 w-4 text-sfpurple focus:ring-sfpurplemedium border-gray-300 rounded" required>
                    <label for="termsAccepted" class="ml-2 block text-sm text-gray-700">
                        I accept the <a href="https://www.youtube.com/watch?v=JiNh-go3YCs" target="_blank" class="text-blue-600 hover:underline">Terms of Service</a>
                    </label>
                </div>
                <button type="submit" class="w-full bg-sfpurplemedium text-white font-medium py-2 rounded-md hover:bg-sfpurple transition duration-150 ease-in-out">Sign Up</button>
            </form>
            <div class="mt-4 text-center">
                <p class="text-sm text-gray-700">
                    Already have an account?
                    <button type="button" onclick="switchToLogin()" class="text-sfpurplemedium font-medium hover:underline">Login</button>
                </p>
            </div>
        </div>

        <div class="mt-4 text-center">
            <button onclick="closeModal('signupModal')" class="w-full bg-gray-100 text-gray-700 border border-gray-300 px-4 py-2 rounded-md hover:bg-gray-200 transition duration-150 ease-in-out">Close</button>
        </div>
    </div>
</div>
