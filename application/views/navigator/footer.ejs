<div class="flex flex-row"><div class="flex flex-col justify-between bg-sfpurplemedium text-gray-300 font-AG font-medium p-4 lg:w-60 w-40 min-h-screen">
    <form action="/" method="GET" class="flex flex-col sticky top-36"><h1 class="text-white text-lg text-center">Filters</h1>

        <label for="footer-class" class="mt-4">Class:</label>
        <%#maybe we can remove this keyword here%>
        <input id="footer-class" type="text" name="classKey" placeholder="CSC101..."
                value="<%= typeof classKey !== 'undefined' ? classKey : '' %>" class="text-gray-700 p-1 rounded" maxlength="4">

        <label for="footer-min-price" class="mt-4">Price:</label> <input type="number" id="footer-min-price" name="minPrice" placeholder="Min $"
               value="<%= typeof minPrice !== 'undefined' ? minPrice : '' %>" class="mb-2 text-gray-700 p-1 rounded" maxlength="6">
        <input type="number" id="footer-max-price" name="maxPrice" placeholder="Max $"
               value="<%= typeof maxPrice !== 'undefined' ? maxPrice : '' %>" class="text-gray-700 p-1 rounded" maxlength="6">

        <input type="hidden" name="category" value="<%= typeof category !== 'undefined' ? category : '' %>">

        <button type="submit" class="mt-4 bg-white text-gray-700 p-2 rounded hover:bg-gray-200 transition">Apply Filters</button>
    </form>

    <footer class="mt-8 text-center">
        <ul class="social_icon flex justify-center gap-4 text-2xl mb-2"> <a href="#" class="hover:text-white"><ion-icon name="logo-facebook"></ion-icon></a>
            <a href="#" class="hover:text-white"><ion-icon name="logo-linkedin"></ion-icon></a>
            <a href="#" class="hover:text-white"><ion-icon name="calendar-outline"></ion-icon></a> <a href="#" class="hover:text-white"><ion-icon name="logo-youtube"></ion-icon></a>
        </ul>
        <p class="copyright text-sm">From San Francisco with ❤️.</p>
    </footer>

    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</div>
