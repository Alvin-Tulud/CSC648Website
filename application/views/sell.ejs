<%- include("navigator/header.ejs") %>
<%- include("navigator/search.ejs") %>

<div class="py-4 flex flex-col items-center justify-center">
    <!-- Notification Messages -->
    <% if (successMessage) { %>
        <div id="toast-success" class="flex items-center max-w-xl p-4 mb-4 text-green-800 bg-green-100 border border-green-300 rounded-lg shadow" role="alert">
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 00-1.414 0L9 11.586 6.707 9.293a1 1 0 00-1.414 1.414l3 3a1 1 0 001.414 0l7-7a1 1 0 000-1.414z" clip-rule="evenodd" />
        </svg>
        <span class="text-sm font-medium"><%= successMessage %></span>
        </div>
    <% } %>
    
    <% if (errorMessage) { %>
        <div id="toast-error" class="flex items-center max-w-xl p-4 mb-4 text-red-800 bg-red-100 border border-red-300 rounded-lg shadow" role="alert">
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.366-.446.957-.502 1.342-.118l6.364 6.364a1 1 0 01.117 1.342l-6.364 6.364c-.446.366-1.176.32-1.342-.117L2.05 10.707a1 1 0 010-1.414L8.257 3.1z" clip-rule="evenodd"/>
        </svg>
        <span class="text-sm font-medium"><%= errorMessage %></span>
        </div>
    <% } %>
    
    <div class="flex flex-col items-center justify-center">
        <h1 class="text-3xl font-bold text-gray-700 mb-4">Create a Listing</h1>
        <div class ="flex flex-row">
            <p class="text-gray-500">Upload an image (PNG, JPEG) of your product and fill out the details below.</p>
            <div class="lg:hidden md:hidden pl-2 text-gray-500 italic"><span class="text-red-600">*</span> = <span class="text-red-600">Required Field</span></div>
        </div>
    </div>
    
    

    <form method="POST" action="/sell/upload" class="flex gap-4 font-SS3" enctype="multipart/form-data">
            
        <div class="flex lg:flex-row md:flex-row flex-col justify-center items-center gap-4">
            <!-- Add image section -->
            <label class="flex items-center justify-center border-2 border-sfpurple lg:w-[35rem] lg:h-[35rem] md:w-[32rem] md:h-[32rem] w-80 h-80 object-cover rounded p-4 cursor-pointer">
                
                <div class="flex flex-col items-center">
                    <p>Add Image <span class="text-red-600">*</span></p>
                    <input type="file" name="fileName" id="fileUpload" accept="image/png, image/jpeg, image/PNG, image/JPEG" required>
                </div>
            </label>

            <div class="lg:hidden md:hidden border-b-2 pb-2 w-[36rem]"></div>

            <div class="flex flex-col gap-4">

                <!-- Product name input -->
                <div class="flex flex-col">
                    <div class="flex flex-row justify-between">
                        <span class="font-medium text-gray-700 text-left mb-1 font-AG">Product Name<span class="text-red-600">*</span>:</span>
                        <div class="lg:visible md:visible invisible text-gray-500 italic"><span class="text-red-600">*</span> = <span class="text-red-600">Required Field</span></div>
                    </div>
                    <input type="text" name="productName" class="border-2 border-sfpurple object-cover rounded lg:w-[38rem] md:w-96 w-[36rem] h-10 p-3" required>
                </div>

                <div class="flex gap-4">

                    <!-- Category input -->
                    <div class="flex flex-col">
                        <span class="font-medium text-gray-700 font-AG">Category<span class="text-red-600">*</span>:</span>
                        <select name="category" class="border-2 border-sfpurple rounded h-10 p-2 required">
                            <option value="">SELECT</option>
                            <option value="1">Stationery</option>
                            <option value="2">Electronic</option>
                            <option value="3">Bags</option>
                            <option value="4">Book</option>
                            <option value="5">Supplies</option>
                            <option value="6">Accessories</option>
                            <option value="7">Furniture</option>
                        </select>
                    </div>

                    <!-- Class number input -->
                    <div class="flex flex-col">
                        <span class="font-medium text-gray-700 font-AG">Class:</span>
                        <input type="text" name="className" class="border-2 border-sfpurple rounded h-10 p-2" maxlength="4">
                        <span class="text-gray-500 w-36">ex. csc111, 2123</span>
                    </div>
                </div>

                <div class="border-b-2 pb-2 lg:w-[38rem] md:w-96 w-[36rem]"></div>

                <!-- Price section -->
                <div class="flex flex-col">
                    <div class="font-medium text-gray-700 mb-1 text-left font-AG">Price<span class="text-red-600">*</span>:</div>
                    <div class="flex items-center gap-2">
                        <span class="text-xl text-gray-700">$</span>
                        <input type="number" name="price" class="border-2 border-sfpurple rounded w-32 h-10 p-3" maxlength="6" required>
                    </div>
                </div>

                <!-- Quantity input -->
                <div class="flex flex-col">
                    <span class="font-medium text-gray-700 text-left mb-1 font-AG">Quantity<span class="text-red-600">*</span>:</span>
                    <input type="number" name="quantity" class="border-2 border-sfpurple object-cover rounded w-20 h-10 p-3">
                </div>

                <div class="border-b-2 pb-2 lg:w-[38rem] md:w-96 w-[36rem]"></div>

                <!-- Description input -->
                <div class="flex flex-col">
                    <span class="font-medium text-gray-700 mb-1 text-left font-AG">Description:</span>
                    <textarea name="description" class="border-2 border-sfpurple rounded lg:w-[38rem] md:w-96 w-[36rem] h-20 p-3" maxlength="1000"></textarea>
                </div>

                <!-- Submit button -->
                <button type="submit" class="bg-sfpurple text-white font-medium py-2 rounded-md w-40 h-10 hover:bg-sfpurplemedium">Create Listing</button>
            </div>
        </div>
        <script src="/js/createListNotification.js"></script>